<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="lupin.AppController">
    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="chooseFileInfo" editable="false" minWidth="300.0" promptText="Choose a file..."/>
        <Button mnemonicParsing="false" onAction="#onChooseFile" text="..."/>
    </HBox>
    <TextArea fx:id="filePreview" editable="false" prefWidth="200.0" promptText="File preview..." wrapText="true"/>
    <TextField fx:id="cipherKeyInput" onKeyTyped="#onKeyChanged" promptText="Enter a key...">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </TextField>
    <HBox alignment="CENTER" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#onEncryptFile" text="Encrypt"/>
        <Button mnemonicParsing="false" onAction="#onDecryptFile" text="Decrypt"/>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
